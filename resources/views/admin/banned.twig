{% extends ajax ? "antares/foundation::layouts.exception.exception_clear" : "antares/foundation::layouts.exception.exception" %}
{% block content %}     
    <div id="app-wrapper">
        <div class="app-content error-page error-page--clean">
            <section class="main-content">
                <div class="error-container">
                    <div class="top-area">
                        <div class="app-logo">
                            <img src="{{ asset('_dist/img/theme/antares/logo/full-logo-white.svg') }}" alt="{{ brand_title() }}">
                        </div>
                        <div class="error-message">
                            <div class="error-message__bg"></div>
                            <div class="error-message__text">
                                <span class="error-code">403</span>
                                <span class="error-desc">{{ info }}</span>
                            </div>
                        </div>
                    </div>
                    <div class="bottom-area">
                        <div class="error-details">
                            {% if reason  %}
                                <h3>{{ reasonLabel }}</h3>
                                <p> 
                                    {{ reason }}
                                </p>
                            {% endif %}
                            <div class="btn-group">
                                <a onclick="window.history.back();" href="#" class="go-back btn btn--md btn--default mdl-button mdl-js-button mdl-js-ripple-effect"><i class="zmdi zmdi-long-arrow-left"></i> Back to previous page</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
